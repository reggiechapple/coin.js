<%- include("../partials/header.ejs") %>

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-gray">
    <div class="container">
        <h2 class="title-page">My account</h2>
    </div> <!-- container //  -->
</section>
<!-- ========================= SECTION PAGETOP END// ========================= -->

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">

        <div class="row">
            <%- include("../partials/profile-sidenav")  %> 
            <main class="col-md-9">
                <% orders.forEach(order => { %>
                    <article class="card mb-4">
                        <header class="card-header">
                            <a href="#" class="float-right"> <i class="fa fa-print"></i> Print</a>
                            <strong class="d-inline-block mr-3">Order ID: 6123456789</strong>
                            <span>Order Date: 16 December 2018</span>
                        </header>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6 class="text-muted">Delivery to</h6>
                                    <p><%= order.name %>  <br>
                                        Phone +1234567890 Email: <%= order.email %>  <br>
                                        Location: <%= order.address.street %>, <%= order.address.city %>, <%= order.address.state %>, <%= order.address.country %> <br>
                                        P.O. Box: <%= order.address.zip %>
                                    </p>
                                </div>
                                <div class="col-md-4">
                                    <h6 class="text-muted">Payment</h6>
                                    <span class="text-success">
                                        <i class="fab fa-lg fa-cc-visa"></i>
                                        Visa **** 4216
                                    </span>
                                    <p>Subtotal: $356 <br>
                                        Shipping fee: $56 <br>
                                        <span class="b">Total: $<%= order.orderTotal %> </span>
                                    </p>
                                </div>
                            </div> <!-- row.// -->
                        </div> <!-- card-body .// -->
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <tbody>
                                    <% order.items.forEach(item => { %>
                                        <tr>
                                            <td width="65">
                                                <img src="<%= item.product.image %>" class="img-xs border">
                                            </td>
                                            <td>
                                                <p class="title mb-0"><%= item.product.name %></p>
                                                <var class="price text-muted">USD <%= item.product.price %></var>
                                            </td>
                                            <td> Seller <br> <%= item.vendor.companyName %>  </td>
                                            <td width="250"> 
                                                <a href="/order-items/<%= item._id %>/tracking" class="btn btn-outline-primary rounded-pill">Track order</a>
                                                <div class="dropdown d-inline-block">
                                                    <a href="#" data-toggle="dropdown"
                                                        class="dropdown-toggle btn btn-outline-secondary rounded-pill">More</a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a href="#" class="dropdown-item">Return</a>
                                                        <a href="#" class="dropdown-item">Cancel order</a>
                                                    </div>
                                                </div> <!-- dropdown.// -->
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div> <!-- table-responsive .end// -->
                    </article> <!-- card order-item .// -->
                <% }) %>
            </main> <!-- col.// -->
        </div>

    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
<%- include("../partials/footer.ejs") %>