<%- include("./partials/header.ejs") %>
<%- include("./partials/carousel.ejs") %>
<div class="container-fluid">
    <!-- =============== SECTION 1 =============== -->
    <section class="padding-bottom">
        <header class="section-heading mb-4">
            <h3 class="title-section">Recommended items</h3>
        </header>

        <div class="row">
            <% if (products) { %>
                <% products.forEach(product => { %>

                    <div class="col-xl-3 col-lg-3 col-md-4 col-6">
                        <%- include("./partials/product-card.ejs", {product: product}) %>
                    </div> <!-- col.// -->
                 
                <% }) %>
            <% } else { %>
                <div class="col">
                    <p>They store is empty.</p>
                </div>
             
            <% } %>
            
        </div> <!-- row.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->
    <%- include("./partials/half-banners.ejs") %>
    <%- include("./partials/full-banner.ejs") %>
</div>
<%- include("./partials/footer.ejs") %>