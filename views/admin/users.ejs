<%- include("../partials/dash-header.ejs") %>
<div class="container">
    <h1>Users</h1>
    <a href="/admin/users/add" class="btn btn-primary rounded-pill my-3">Add User</a>
    <table class="table table-striped table-responsive table-image">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                <% users.forEach(userInfo => { %>

                    <tr>
                        <td class="">
                            <img src="/<%= userInfo.avatar %>" class="img-fluid img-thumbnail rounded-circle" style="height: 64px; width: 64px;" alt="User photo">
                        </td>
                        <td><%= userInfo.name %></td>
                        <td><%= userInfo.username %></td>
                        <td><%= userInfo.role %></td>
                        <td>
                            Details | Edit | Remove
                        </td>
                    </tr>
                 
                <% }) %>
            </tbody>
    </table>
</div>
<%- include("../partials/dash-footer.ejs") %>