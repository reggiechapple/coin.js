<%- include("../partials/dash-header.ejs") %>
<div class="container">
    <h1>Orders</h1>

    <div class="card">
        <div class="card-header">
            Pending Orders
        </div>
        <div class="card-body">
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Actions</th> 
                    </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(item => { %>
                            <tr>
                                <td><%= item.name %></td>
                                <td><%= item.orderTotal %></td>
                                <td><a href="/admin/orders/<%= item._id %>">View</a></td>
                            </tr>
                        <% }) %>
                    </tbody>
            </table>
        </div>
      </div>
</div>
<%- include("../partials/dash-footer.ejs") %>