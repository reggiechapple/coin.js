<%- include("../partials/dash-header.ejs") %>
<div class="container">
    <h1>Orders</h1>

    <div class="card">
        <div class="card-header">
            Pending Orders
        </div>
        <div class="card-body">
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Drivers</th> 
                    </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(item => { %>
                            <tr>
                                <td><%= item.name %></td>
                                <td><%= item.orderTotal %></td>
                                <td><%= item.status %></td>
                                <% if (item.driver) { %>
                                    <td><%= item.driver.identity.name %></td>
                                <% } else { %>
                                    <td>
                                        <form action="/admin/orders/<%= item._id %>/assign-driver" method="POST">
                                            <div class="input-group">
                                                <select class="custom-select" id="driver" name="driver" aria-label="Select driver">
                                                    <option selected>Choose...</option>
                                                    <% drivers.forEach(driver => { %>
                                                        <option value="<%= driver._id %>"><%= driver.identity.name %></option>
                                                    <% }) %>
                                                </select>
                                                <div class="input-group-append">
                                                  <button class="btn btn-outline-secondary" type="submit">Assign</button>
                                                </div>
                                            </div>
                                        </form>
                                    </td>
                                <% } %>
                            </tr>
                        <% }) %>
                    </tbody>
            </table>
        </div>
      </div>
</div>
<%- include("../partials/dash-footer.ejs") %>